<%# app/views/entries/_form.html.erb %>

<%# Ensure multipart: true is present for file uploads %>
<%= form_with(model: entry, local: true, multipart: true) do |form| %> <%# <--- ENSURE multipart: true %>
  <% if entry.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
        <% entry.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, rows: 6 %>
  </div>

  <div class="field"> <%# <--- NEW FIELD FOR IMAGE %>
    <%= form.label :image %>
    <%= form.file_field :image %>
    <% if entry.image.attached? %>
      <small>Current image: <%= link_to entry.image.filename, rails_blob_path(entry.image, disposition: "attachment") %></small><br>
      <%# You can also display a preview of the image if you like %>
      <%= image_tag entry.image, style: "max-width: 200px; height: auto; margin-top: 10px;" if entry.image.attached? %>
      <br><small>Selecting a new file will replace the current one.</small>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit class: "button" %>
  </div>
<% end %>
